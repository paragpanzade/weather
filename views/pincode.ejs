<html lang="en">
    <%- include('./partials/head.ejs') %>
    <body>
        <%- include('./partials/nav.ejs') %>
        <div class="main">
            <div class="check-weather content" id="check-weather">
                <form action="/check-weather" method="POST"> 

                    <input type="hidden" id="wm" name="wm" value="pincode">

                    Choose your country: <select name="countries" id="countries"></select><br>

                    Pincode: <input type="text" name="pincode" id="pincode" required><br>

                    <button type="submit">Check</button>
                </form>
            </div>
            <div class="display-weather content">
                <%if(locals.data){ %>
                    <h2><%= data.name %>, <%= data.sys['country'] %></h2>
                    <div class="content">
                        <p>Temperature: <%= data.main['temp'] %></p>
                    </div>
                <%}%>
            </div>
        </div>
        
        <%- include('./partials/footer.ejs') %>
        <script src="/main.js"></script>
    </body>
</html>